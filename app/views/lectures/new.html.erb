<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <h3>クラス作成</h3>

    <%= form_with(model: @lecture, local: true) do |f| %>
    
      <div class="form-group">
        <%= f.label :name, 'クラス名' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :title, 'タイトル' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

    
      <div class="form-group">
        <%= f.label :schedule, '時間割' %>
        <%= f.select :schedule, ["1","2","3","4","5","6","7","8","9"], { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
      </div>
  
  　
  　    <div class="form-group">
  　       <%= f.label :number, '回数' %>
  　       <%= f.select :number,["1","2","3","4","5","6","7","8","9"], { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
      </div>
      
      <div class="form-group">
        <%= f.label :password, 'パスワード' %>
        <%= f.text_field :passward, class: 'form-control' %>
      </div>
      
  　　　<div class="form-group">
        <%= f.label :comment, '備考' %>
        <%= f.text_field :comment, class: 'form-control' %>
      </div>
      　
      <%= f.submit '作成', class: 'btn btn-primary btn-block' %>
       
      <%= form_with(model: @lecture, local: true) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
      <% end %>
    <% end %>
  </div>
</div>