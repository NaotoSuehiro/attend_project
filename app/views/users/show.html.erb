<h1><u>プロフィール</u></h1>
</br>

<div>
  <div class="text-center"> <img class="rounded img-fluid" src="<%= gravatar_url(@user, { size: 300 }) %>" alt=""></div>
  </br>
  <h2 class="text-center"><%= @user.name %></h2>
</div>
</br>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="card border-secondary mb-3">
        
        <div class="card-header border-secondary">
          <div class ="text-center">profile </div>
            <div> 
              <% if @account.present? %>
                <div class ="text-right"> <%= link_to '編集', edit_account_path %></div>
              <% else %>
                <div class ="text-right"> <%= link_to '作成', new_account_path %></div>
              <% end %>
            </div>
        </div>
        
        <div class="card-body">
          <% if @account.present? %>
            <p><%= @account.introduction %></p>
          <% else %>
            <p>自己紹介の文を記入しよう！</p>
          <% end %>
          
          <% if @account.present? %>
            <p><strong>SNS:</strong><%= @account.sns %></p>
          <% else %>
            <p></p>
          <% end %>
        </div>
        
      </div>
    </div>
  </div>
</div>
</br>

<table class="table table-hover">
  <tr> <th class="text-center table-primary">bookmark</th>
  </tr>
  <% if @bookmarks.present? %>
  <tr>
    <% @bookmarks.each do |bookmark| %>
      <% lecture = Lecture.find_by(id:bookmark.lecture_id) %>
      <% if lecture.present? %>
        <td><a href="/lectures/#{lecture.id}"><%= lecture.name %></a></td>
      <% end %>
  </tr>
    <% end %>
  <% else %>
  <tr>
    <td>まだブックマークはありません。</td>
  </tr>
  <% end %>
</table>

